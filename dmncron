# Disable logging by default
updatelog=/dev/null
statuslog=/dev/null
votesrrdlog=/dev/null
balancelog=/dev/null
portchecklog=/dev/null
autoupdatelog=/dev/null

# If parameter 1 is log then enable logging
if [[ "$1" == "log" ]]; then
  updatelog=/var/log/dmn/update.log
  statuslog=/var/log/dmn/status.log
  votesrrdlog=/var/log/dmn/votesrrd.log
  balancelog=/var/log/dmn/balance.log
  portchecklog=/var/log/dmn/portcheck.log
  autoupdatelog=/var/log/dmn/autoupdate.log
fi

# Sequentially run scripts
#/opt/polisninja-ctl/polisdupdate >> $updatelog
/opt/polisninja-ctl/dmnctl status >> $statuslog
#/opt/polisninja-ctl/dmnvotesrrd >> $votesrrdlog

#/usr/bin/php /var/www/html/main/api/cron.php main blocks24h >> $statuslog
/usr/bin/php /var/www/html/main/api/cron.php main nodesstatus >> $statuslog
/usr/bin/php /var/www/html/main/api/cron.php main blocksconsensus >> $statuslog
/usr/bin/php /var/www/html/main/api/cron.php main votelimit >> $statuslog
/usr/bin/php /var/www/html/main/api/cron.php main masternodeslistfull >> $statuslog
/usr/bin/php /var/www/html/main/api/cron.php main governanceproposals >> $statuslog
/usr/bin/php /var/www/html/main/api/cron.php main governancetriggers >> $statuslog

# Concurrently run scripts
/usr/bin/nice -n 18 /opt/polisninja-ctl/dmnbalance >> $balancelog &
/usr/bin/nice -n 19 /opt/polisninja-ctl/dmnportcheck db >> $portchecklog &
/usr/bin/nice -n 15 /opt/polisninja-ctl/dmnautoupdate >> $autoupdatelog &
